<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/backgorund_diamond_pattern</item>
        <item name="android:colorControlHighlight">@color/lighterMenuCta</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- Note that only our own TextView's will use the font attribute -->
    </style>

    <!-- DIALOG BOX ANIMATION START-->
    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <!-- DIALOG BOX ANIMATION END -->

    <!-- NORMAL PAGER SLIDING TAB START-->
    <style name="PagerSlidingTabStrip">
        <item name="android:elevation">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bloated_view_pager_tab_height</item>
        <item name="android:background">@color/otherCta</item>
    </style>
    <!-- NORMAL PAGER SLIDING TAB END-->

    <!-- THIN PAGER SLIDING TAB START-->
    <style name="PagerSlidingTabStripThin">
        <item name="android:elevation">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_view_pager_tab_height</item>
        <item name="android:background">@color/otherCta</item>
    </style>
    <!-- THIN PAGER SLIDING TAB END-->

    <!--AUTO HORIZONTAL SCROLL TEXTVIEW-->
    <style name="AutoHorizontalScrollTextView">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:freezesText">true</item>
        <item name="android:state_selected">true</item>
    </style>

    <!--SINGLE LINE TEXTVIEW-->
    <style name="SingleLineTextView">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>


</resources>
